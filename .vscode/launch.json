{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Remote Attach to Docker",
        "type": "debugpy",
        "request": "attach",
        "connect": {
          "host": "localhost",
          "port": 5678
        },
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}",
            // '/app' is the working directory inside the Docker container
            "remoteRoot": "/app"
          }
        ]
      }
    ]
  }